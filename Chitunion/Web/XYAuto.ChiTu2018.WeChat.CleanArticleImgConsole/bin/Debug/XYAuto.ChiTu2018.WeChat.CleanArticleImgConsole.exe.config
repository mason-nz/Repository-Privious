<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="StorageGroupConfig" type="XYAuto.CTUtils.Image.FastDFS.Config.StorageGroupConfig,XYAuto.CTUtils"></section>
  </configSections>
  <appSettings>
    <!--赤兔联盟系统DB连接串-->
    <!--<add key="ConnectionStrings_ITSC" value="server=192.168.3.152,6000;uid=sa;pwd=123.abc;database=NLP2017;Max Pool Size=300;Application Name=media_test" />-->
    <!--基础数据DB连接串，用于存放微信公众号文章详情数据-->
    <add key="ConnectionStrings_BaseData" value="server=192.168.3.152,6000;uid=sa;pwd=123.abc;database=BaseData2017;Max Pool Size=300;Application Name=BaseData2017" />

    <add key="QueryArticleInfo_RecID" value="1"/>
    <add key="QueryArticleInfo_TopNum" value="10"/>
    <!--<add key="QueryArticleInfo_CreateTime" value="2018-01-01"/>-->
    <!--删除指定天之前的，在文章中的图片信息-->
    <add key="QueryArticleInfo_Days" value="180"/>

    <!--文章中替换图片url后的域名url前缀:http://imgcdn.chitunion.com/-->
    <add key="CleanImgURLPrefix" value="http://192.168.3.76/" />
  </appSettings>
  <!--图片本地化相关配置-->
  <StorageGroupConfig configSource="ConfigFile\StorageGroupConfig.config" />
  <log4net>
    <root>
      <level value="All" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />
    </root>
    <logger name="BaseLog">
      <level value="ALL" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />
    </logger>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Log\" />
      <param name="AppendToFile" value="true" />
      <param name="MaxSizeRollBackups" value="1000" />
      <param name="MaximumFileSize" value="1MB" />
      <!--可以为:Once|Size|Date|Composite-->
      <!--Composite为Size和Date的组合-->
      <param name="RollingStyle" value="Composite" />
      <param name="DatePattern" value="&quot;_&quot;yyyy-MM-dd&quot;.log&quot;" />
      <!--置为true,当前最新日志文件名永远为file节中的名字CC_yyyy-MM-dd.LOG-->
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    <!-- 控制台前台显示日志 -->
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="Info" />
        <foreColor value="Green" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%n%date{HH:mm:ss,fff} [%-5level] %m" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="Info" />
        <param name="LevelMax" value="Fatal" />
      </filter>
    </appender>
  </log4net>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>